<div class="container">
  <div class="row mt-4 offset-2">
     <h4 style="background-color: silver;">注文履歴一覧</h4>
   </div>
   <div class="row mt-4 offset-2">
    <div class="col-9">
      <table class="table table-striped">
       <thead class="thead" style="background-color: silver;">
        <tr>
         <th style="width: 30%">購入日時</th>
         <th style="width: 10%">購入者</th>
         <th style="width: 10%">注文個数</th>
        </tr>
       </thead>
       <tbody>
       <% @orders.each do |order| %>
        <tr>
          <td style="width: 30%"><%= link_to order.created_at, admin_order_path(order) %></td>
          <td style="width: 30%"><% customer = order.customer %>
          <%= customer.first_name + customer.last_name %></td>
          <td style="width: 10%"><%= order.item_count %></td>
        </tr>
       <% end %>
      </tbody>
     </table>
    </div>
   </div>
</div>