<div class="container offset-3">
  <div class="row">
    <h4 style="background-color: silver;">会員一覧</h4>
      <div class="col-md-1 offset-4">
      <%= link_to new_admin_item_path do %>
       <i class="fa-solid fa-plus"></i>
      <% end %>
      </div>
  </div>
</div>

<div class="container offset-3">
    <div class="row">
     <table style="width: 50%;">
       <thead class="thead" style="background-color: silver;">
        <th style="width: 20%">会員ID</th>
        <th style="width: 30%">氏名</th>
        <th style="width: 40%">メールアドレス</th>
        <th style="width: 40%">ステータス</th>
       </thead>
       <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td style="width: 10%"><%= customer.id %></td>
          <td style="width: 10%"><%= link_to customer.first_name + customer.last_name, admin_customer_path(customer.id) %></td>
          <td style="width: 10%"><%= customer.email %></td>
          <td style="width: 10%"><%= customer.is_active %></td>
        </tr>
       <% end %>
      </tbody>
     </table>
    </div>
</div>
<div class="container mt-5 offset-4">
  <div class="row">
   <%= paginate @customers %>
  </div>
</div>


