<div class="container">
  <div class="row offset-2">
    <h4 style="background-color: silver;"><%= @customer.first_name + @customer.last_name %>さんの会員詳細</h4>
  </div>

    <table>
    <div class="row mb-2">
      <div class="col-2 offset-2">
       会員ID
      </div>
      <div class="col-2">
        <%= @customer.id %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col-2 offset-2">
        氏名
      </div>
      <div class="col-1">
        <%= @customer.first_name %>
      </div>
      <div class="col-1">
        <%= @customer.last_name %>
      </div>

    </div>

    <div class="row mb-5">
      <div class="col-2 offset-2">
        フリガナ
      </div>
      <div class="col-1">
        <%= @customer.first_name_kana %>
      </div>
      <div class="col-1">
        <%= @customer.last_name_kana %>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-2 offset-2">
        郵便番号
      </div>
      <div class="col-2">
        <%= @customer.postal_code %>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-2 offset-2">
        住所
      </div>
      <div class="col-2">
        <%= @customer.address %>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-2 offset-2">
        電話番号
      </div>
      <div class="col-2">
        <%= @customer.telephone_number %>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-2 offset-2">
        メールアドレス
      </div>
      <div class="col-2">
        <%= @customer.email %>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-2 offset-2">
        ステータス
      </div>
      <div class="col-2">
        <%= @customer.is_active %>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-3 offset-4">
        <%= link_to '編集する', edit_admin_customer_path(@customer), style: 'background-color: #339933; color: white;', class: "btn btn-lg custom-button" %>
      </div>
      <div class="col-3">
        <%= link_to '注文履歴一覧を見る', admin_path, style: 'background-color: #3399FF	; color: white;', class: "btn btn-lg custom-button" %>
      </div>
    </div>

</div>
