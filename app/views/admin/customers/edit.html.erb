<div class="container">
  <div class="row offset-2">
    <h4 style="background-color: silver;">会員詳細</h4>
  </div>

    <div class="row mb-2">
      <div class="col-2 offset-3">
       会員ID
      </div>
      <div class="col-3">
        <%= @customer.id %>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col-2 offset-3">
      <%= form_with(model: @customer, url: admin_customer_path(@customer), method: :patch) do |form| %>
        <%= form.label :"氏名"%>
      </div>
      <div class="col-3">
        <%= form.text_field :first_name, class: "form-control w-80" %>
      </div>
      <div class="col-3">
        <%= form.text_field :last_name, class: "form-control w-80" %>
      </div>

    </div>

    <div class="row mb-1">
      <div class="col-2 offset-3">
        <%= form.label :"フリガナ" %>
      </div>
      <div class="col-3">
        <%= form.text_field :first_name_kana, class: "form-control w-80" %>
      </div>
      <div class="col-3">
        <%= form.text_field :last_name_kana, class: "form-control w-80" %>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col-2 offset-3">
        <%= form.label :"郵便番号" %>
      </div>
      <div class="col-3">
        <%= form.text_field :postal_code, class: "form-control w-80" %>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col-2 offset-3">
        <%= form.label :"住所" %>
      </div>
      <div class="col-5">
        <%= form.text_field :address, class: "form-control w-90" %>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col-2 offset-3">
        <%= form.label :"電話番号" %>
      </div>
      <div class="col-3">
        <%= form.number_field :telephone_number, class: "form-control w-80" %>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col-2 offset-3">
        <%= form.label :"メールアドレス" %>
      </div>
      <div class="col-3">
        <%= form.text_field :email, class: "form-control w-80" %>
      </div>
    </div>

    <div class="row mb-1">
      <div class="col-2 offset-3">
        <%= form.label :"ステータス" %>
      </div>
    </div>


    <div class="row mt-3">
      <div class="col-2 offset-5">
       <%= form.submit '変更を保存', style: 'background-color: limegreen; color: white;', class: "btn btn-lg custom-button"%>
      <% end %>
      </div>
   </div>
