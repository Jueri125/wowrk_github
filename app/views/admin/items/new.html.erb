<div class="container">
  <div class="row">
    <!--<div class="col-md-3"></div>
    <!--<div class=col-md-7 offset-md-3>-->
  <h4 style="background-color: silver;">商品新規登録</h4>
  </div>


  <!--<div class="row align-items-center">-->
    <%= form_with(model: @item, url: admin_items_path) do |form| %>

    <div class="row mb-3">
      <div class="col-2 offset-2">
        <%= form.label :"商品画像" %>
      </div>
      <div class="col-7">
        <%= form.file_field :image %>
      </div>
    </div>

    <div class="row mb-3">
     <div class="col-2 offset-2">
        <%= form.label :"商品名" %>
      </div>
      <div class="col-4">
        <%= form.text_field :name, class:"form-control"%>
      </div>
    </div>

    <div class="row mb-3">
    <div class="col-2 offset-2">
      <%= form.label :"商品の説明" %>
      </div>
      <div class="col-4">
      <%= form.text_area :introduction, class:"form-control form-control-lg" %>
      </div>
    </div>


    <div class="row mb-3">
     <div class="col-2 offset-2">
      <%= form.label :"税抜価格" %>
     </div>
     <div class="col-4">
      <%= form.number_field :price %>
     </div>
   </div>

    <div class="row mb-3 ">
     <div class="col-2 offset-2">
      <%= form.label :"販売ステータス" %>
     </div>
    </div>

    <div class="row mb-3 text-center">
    <div class="col-12">
      <%= form.submit '新規登録', style: 'background-color: limegreen; color: white;', class: "btn btn-lg custom-button"%>
    </div>
    </div>

    <% end %>
  </div>
</div>