<div class="container offset-3">
  <div class="row">
   <h4 style="background-color: silver;">商品詳細</h4>
  </div>


   <div class="row">
     <div class="col-3">
          <% if @item.image.attached? %>
            <%= image_tag @item.image, size: "200x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
          <% end %>
     </div>

     <div class="col">
       <table>
          <tr class="col-3 offset">
            <td>
              商品名
            </td>
            <td>
              <%= @item.name %>
            </td>
          </tr>

          <tr class="col-3 offset">
            <td>
              商品説明
            </td>
            <td>
              <%= @item.introduction %>
            </td>
          </tr>

          <tr class="col-3 offset">
            <td>
              税込価格</br>
            (税抜価格)
            </td>
            <td>
              <%= @item.price %>
            </td>
          </tr>
        </table>
          <div class="col mt-3">
            <%= link_to '編集する', edit_admin_item_path(@item), style: 'background-color: green; color: white;', class: "btn btn-lg custom-button" %>
          </div>
     </div>
  </div>
</div>
