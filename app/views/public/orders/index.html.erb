<div class="container">
  <div class="row offset-md-2">
     <h3 style="background-color: silver;">注文履歴一覧</h3>
   </div>
   <div class="row offset-md-2">
    <table>
      <thead>
        <tr>
          <th class="border border-dark p-2" style="width: 150px; background-color: #DDDDDD;">注文日</th>
          <th class="border border-dark p-2" style="width: 150px; background-color: #DDDDDD;">配送先</th>
          <th class="border border-dark p-2" style="width: 150px; background-color: #DDDDDD;">注文商品</th>
          <th class="border border-dark p-2" style="width: 100px; background-color: #DDDDDD;">支払金額</th>
          <th class="border border-dark p-2" style="width: 150px; background-color: #DDDDDD;">注文詳細</th>
        </tr>
      </thead>
      <tbody>
       <% @orders.each do |order| %>
        <tr>
          <td class="border border-dark p-2" style="width: 150px;"><%= order.created_at %></td>
          <td class="border border-dark p-2" style="width: 150px;"><%= order.postal_code%><br>
              <%= order.address %><br>
              <%= order.name  %>
          </td>
          <td class="border border-dark p-2" style="width: 150px;">
            <% order.order_details.each do |order_detail| %>
             <%= order_detail.item.name %>
            <% end %>
          </td>
          <td class="border border-dark p-2" style="width: 100px;"><%= order.total_payment %></td>
          <td class="border border-dark p-2" style="width: 150px;">
           <%= link_to order_path(order.id) do %>
             <button type="button" class="btn btn-primary">表示する</button>
           <% end %>
          </td>
        </tr>
       <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>

