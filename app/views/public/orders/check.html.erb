<div class="container mt-4 offset-1">
  <div class="row">
     <h4 style="background-color: silver;">注文情報確認</h4>
  </div>
  <div class="row">
  <div class="col-md-7">
      <table class="table">
        <thead>
          <tr>
            <td class="border border-dark p-2" style="width: 100px; background-color: #DDDDDD;">商品名</td>
            <td class="border border-dark p-2" style="width: 80px;  background-color: #DDDDDD;">単価(税込み)</td>
            <td class="border border-dark p-2" style="width: 70px;  background-color: #DDDDDD;">数量</td>
            <td class="border border-dark p-2" style="width: 70px;  background-color: #DDDDDD;">小計</td>
          </tr>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
         <tr>
          <td class="border border-dark p-2" style="width: 100px;"><%= cart_item.item.name %></td>
          <td class="border border-dark p-2" style="width: 70px;"><%= cart_item.item.with_tax_price %></td>
          <td class="border border-dark p-2" style="width: 70px;"><%= cart_item.amount %></td>
          <td class="border border-dark p-2" style="width: 70px;"><%= cart_item.subtotal%></td>
        <% end %>
          </tr>
        </table>
      </div>
      <div class="col-md-3">
          <table class="table">
          <thead>
            <tr>
              <td class="border border-dark p-2" style="width: 70px;  background-color: #DDDDDD;">送料</td>
              <td class="border border-dark p-2" style="width: 70px; "><%= "800" %></td>
            </tr>
            <tr>
              <td class="border border-dark p-2" style="width: 70px;  background-color: #DDDDDD;">商品合計</td>
              <td class="border border-dark p-2" style="width: 70px;"><%= @cart_items.sum(&:subtotal) %></td>
            </tr>
            <tr>
              <td class="border border-dark p-2" style="width: 70px;  background-color: #DDDDDD;">請求金額</td>
              <td class="border border-dark p-2" style="width: 70px;"><%= @total=800 +  @cart_items.sum(&:subtotal) %></td>
            </tr>
          </thead>
        </table>
      </div>

    <div class="row-md-7">
      <span style="font-weight: bold; font-size: 1.1em;">
        お支払方法
      </span>
      <span>
        <%= @order.payment_method_i18n %>
      </span><br>
      <span style="font-weight: bold; font-size: 1.1em;">
        お届け先
      </span>
      <span>
        <%= @order.postal_code %>
        <%= @order.address %>
        <%= @order.name %>
      </span>
          <div class="col-md-12 offset-6 mt-4">
          <%= form_with model: @order, url: orders_path do |form| %>
            <%= form.hidden_field :customer_id, value: current_customer.id %>
            <%= form.hidden_field :total_payment, value: @total %>
            <%= form.hidden_field :shipping_cost, value: 800 %>
            <%= form.hidden_field :name, value: @order.name %>
            <%= form.hidden_field :postal_code, value: @order.postal_code %>
            <%= form.hidden_field :address, value: @order.address %>
            <%= form.hidden_field :payment_method, value: @order.payment_method %>
            <span class="col-md-12 offset-6"><%= form.submit '注文確定する', style: 'background-color: limegreen; color: white;', class: "btn btn-lg custom-button"%></span>
          <% end %>
          </div>
     </div>
    </div>
  </div>

